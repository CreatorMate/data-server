{
  "compilerOptions": {
    "module": "es2022",
    // Allows top-level await
    "target": "es2022",
    // Required for async/await
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "./*"
      ]
      // Ensure proper resolution of local modules
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}