{
  "compilerOptions": {
    "module": "es2022",
    // Allows top-level await
    "target": "es2022",
    // Required for async/await
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "include": [
      "src/**/*" // Ensure this path includes the file with your code
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}